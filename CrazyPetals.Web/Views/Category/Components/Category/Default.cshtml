@model CrazyPetals.Entities.WebViewModels.CategoryWrapperViewModel
<div id="indexPartialContent">
    @if (Model.TotalCount <= 0)
    {
        <div class="list-empty-state">
            <a asp-action="add" asp-controller="category" class="btn btn-primary mr-4 add-icon"> Add New Category <img src="/images/icons/Plus.png"></a>
            <p class="mt-4 f-22 f-bold">
                Start adding category.
            </p>
            <p class="f-gray mt-2 f-14">Click on "Add New Category" button to add category.</p>

        </div>
    }
    else
    {

        <div class="row m-auto">
            @foreach (var category in Model.CategoryList)
            {
                <div class="col-md-3 p-2 d-flex align-items-stretch">
                    <div class="card cp-manage-icon" style="width: 18rem;">
                        <span class="cp-manage-button">
                            <i onclick="redirectToEdit('/category/edit/@category.Id')" class="fa fa-pencil" title="Edit" aria-hidden="true"></i>
                            <i onclick="OpenDeleteConfirmBox('@category.Id')" class="fa fa-trash ml-1" title="Delete" aria-hidden="true"></i>
                        </span>
                        <img src="@category.ImagePath" class="card-img-top" alt="@category.Name">
                        <div class="card-body">
                            <h5 class="card-title">
                                @category.Name
                            </h5>
                        </div>

                    </div>
                </div>
            }
        </div>
        <!--Pagination-->
        <partial name="_pagination" model="Model.PagingData" />
    }
</div>
