@model CrazyPetals.Entities.WebViewModels.OrderWrapperViewModel
<div id="indexPartialContent" class="table-wrapper">
    @if (Model.TotalCount <= 0)
    {
        <div class="list-empty-state">
            @if (ViewBag.ShowEmptyState == true)
            {
                <p class="m-t-25 f-22 f-bold">
                    No orders has been placed yet.
                </p>
            }
            else
            {
                <img src="~/images/search@2x.png" alt="Sorry" />
                <p class="m-t-25 f-22 f-bold">
                    No Result Found!
                </p>
                <p class="f-gray m-t-10 f-14">We couldn't find the item you were looking for. Please try again.</p>
            }
        </div>
    }
    else
    {
        <table id="tblContent" class="table">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Order Number</th>
                    <th>Status</th>
                    <th>Placed Date</th>
                    @*<th class="text-center">Manage</th>
                </tr>*@
            </thead>
            <tbody>
                @foreach (var order in Model.OrderList)
                {
                <tr>
                    <td>@order.Number</td>
                    <td>
                        @order.OrderNumber
                    </td>
                    <td>
                        @order.Status
                    </td>
                    <td>
                        @order.CreatedDate
                    </td>
                    @*<td class="text-center">
                        <span class="display-inline position-relative more-action">
                            <img src="~/images/icons/more-vertical.png" class="img-responsive  cursor-pointer" />
                            <div class="editRemove-popup">
                                <ul>
                                    <li><a asp-controller="order" asp-action="edit" asp-route-id="@order.Id"><img src="~/images/icons/edit.png" class="action-icon img-responsive" /> Edit</a> </li>
                                    <li onclick="openModal('@order.Id')"><img src="~/images/icons/trash.png" class="action-icon" />Remove</li>
                                </ul>
                            </div>
                        </span>
                    </td>*@
                </tr>
                }
            </tbody>
        </table>
        <!--Pagination-->
        <partial name="_pagination" model="Model.PagingData" />
    }
</div>
