@model CrazyPetals.Entities.WebViewModels.UserWrapperViewModel

<div id="indexPartialContent" class="table-wrapper">
    @if (Model.TotalCount <= 0)
    {
        <div class="list-empty-state">
            @if (ViewBag.ShowEmptyState == true)
            {
                <p class="mt-3 f-22 f-bold">
                    No customers are registered yet.
                </p>
            }
            else
            {
                <img src="~/images/search@2x.png" alt="Sorry" />
                <p class="m-t-25 f-22 f-bold">
                    No Result Found!
                </p>
                <p class="f-gray m-t-10 f-14">We couldn't find the item you were looking for. Please try again.</p>
            }
        </div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Name</th>
                    <th>Email </th>
                    <th>Created Date</th>
                    <th class="text-center">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UserList)
                {
                    <tr>
                        <td>@user.Number</td>
                        <td>@user.Name</td>
                        <td>@user.Role</td>
                        <td>@user.CreatedDate</td>
                        <td class="text-center">
                            <span class="display-inline position-relative more-action">
                                <img src="~/images/icons/more-vertical.png" class="img-responsive  cursor-pointer" />
                                <div class="editRemove-popup">
                                    <ul>
                                        <li onclick="openModal('@user.Id')"><img src="~/images/icons/trash.png" class="action-icon" />Remove</li>
                                    </ul>
                                </div>
                            </span>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <!--Pagination-->
        <partial name="_pagination" model="Model.PagingData" />
    }
</div>
