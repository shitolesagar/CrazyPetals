@{
    ViewData["Title"] = "Filter";
    string stringHtml = "<span class=\"display-inline\">Filter</span>";
    string AddButton = string.Format("<span class=\"nav-item\"><a class=\"btn nav-link btn-primary m-r-20 add-icon\" href=\"/filter/add\"  ><span class=\"addIcon-txt\">Add New Filter</span><img src=\"/images/icons/Plus.png\" /> </a></span>");

    ViewData["TabButton"] = AddButton;
    ViewData["TabHeading"] = stringHtml;
    ViewData["ActiveTab"] = "filter";
    var message = TempData["Message"] ?? string.Empty;
}



@await Component.InvokeAsync("Filter", new { isPartial = false, filter = ViewBag.Filters })



@section Scripts{
    <script>
        var message = "@message";
        if (message) {
            ShowSlackbarSucessMessage(message);
        }
    </script>
}