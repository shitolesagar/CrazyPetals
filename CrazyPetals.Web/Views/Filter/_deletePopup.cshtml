<!-- Modal -->

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog ">
        <form asp-action="deleteAsync" asp-controller="filter" method="post" id="delete-form">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <i class="fa fa-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="f-18 m-t-30 m-b-30 text-center">Are you sure want to delete this filter?</p>
                </div>
                <div class="m-b-20 text-center">
                    <button type="submit" class="btn btn-primary btn-md m-r-10">Yes</button>
                    <button type="button" class="btn" data-dismiss="modal">No</button>
                </div>
            </div>
            <input type="hidden" id="delete-id" name="id" value="" />
        </form>
    </div>
</div>

