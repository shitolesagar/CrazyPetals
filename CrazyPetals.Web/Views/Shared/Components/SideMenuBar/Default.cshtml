@{
    string activetab = ViewData["ActiveTab"]?.ToString();
}
<div class="left_col menu_fixed">
    <div class="scroll-view">
        <div class="hamburger-menu">
            <input class="menu-btn" type="checkbox" id="menu-btn" checked />
            <label class="menu-icon" for="menu-btn">
                <span class="navicon"></span>
            </label>
        </div>
        <div class="logo-wrapper">
            <img src="~/images/app_oval_logo.png" class="img-responsive p-t-20 dashboard-logo" />
        </div>
        <div class="clearfix"></div>
        <div id="sidebar-menu" class="main_menu_side main_menu ">
            <div class="menu_section">
                <ul class="nav side-menu">
                    <li class="nav-item @(activetab == "product" ? "active" :"" )">
                        <a title="Product" asp-controller="product" asp-action="index" data-toggle="tooltip" data-placement="right">
                            <img src="~/images/icons/product.png" class="m-r-10 vertical-middle hamburger-menu-icon" />
                            <span class="vertical-middle display-inline">Manage Products</span>
                        </a>
                    </li>
                    <li class="nav-item @(activetab == "order" ? "active" :"" )">
                        <a title="Orders" asp-controller="orders" asp-action="index" data-toggle="tooltip" data-placement="right">
                            <img src="~/images/icons/product.png" class="m-r-10 vertical-middle hamburger-menu-icon" />
                            <span class="vertical-middle display-inline">Manage Orders</span>
                        </a>
                    </li>
                    <li class="nav-item @(activetab == "user" ? "active" :"" )">
                        <a title="Users" asp-controller="user" asp-action="index" data-toggle="tooltip" data-placement="right">
                            <img src="~/images/icons/view-list-large.png" class="m-r-10 vertical-middle hamburger-menu-icon" />
                            <span class="vertical-middle display-inline">All Customers</span>
                        </a>
                    </li>
                    <li class="nav-item @(activetab == "dashboard" ? "active" :"" )">
                        <a title="Categories" asp-controller="category" asp-action="index" data-toggle="tooltip" data-placement="right">
                            <img src="~/images/icons/grid.png" class="m-r-10 vertical-middle hamburger-menu-icon" />
                            <span class="vertical-middle display-inline">Main Categories</span>
                        </a>
                    </li>
                    <li class="nav-item @(activetab == "filter" ? "active" :"" )">
                        <a title="Filter" asp-controller="filter" asp-action="index" data-toggle="tooltip" data-placement="right">
                            <img src="~/images/icons/view-list-large.png" class="m-r-10 vertical-middle hamburger-menu-icon" />
                            <span class="vertical-middle display-inline">Category Filters</span>
                        </a>
                    </li>
                    <li class="nav-item @(activetab == "banner" ? "active" :"" )">
                        <a title="Advertisement Banner" asp-controller="advertisementbanner" asp-action="index" data-toggle="tooltip" data-placement="right">
                            <img src="~/images/icons/view-list-large.png" class="m-r-10 vertical-middle hamburger-menu-icon" />
                            <span class="vertical-middle display-inline">Banner Ads</span>
                        </a>
                    </li>
                    <li class="nav-item @(activetab == "notification" ? "active" :"" )">
                        <a title="Notification" asp-controller="notification" asp-action="index" data-toggle="tooltip" data-placement="right">
                            <img src="~/images/icons/view-list-large.png" class="m-r-10 vertical-middle hamburger-menu-icon" />
                            <span class="vertical-middle display-inline">Notification</span>
                        </a>
                    </li>



                </ul>
            </div>
        </div>

        <div class="signOut-section" data-toggle="tooltip" data-placement="right" title="Sign out">
            <span class="display-inline f-bold f-16 cursor-pointer" onclick="document.getElementById('logoutForm').submit()">
                <img src="~/images/icons/log-out.png" class="m-r-5" />
                <span class="display-inline vertical-middle hideMobile-txt">Sign out</span>
            </span>
        </div>
    </div>
</div>
<form asp-controller="account" asp-action="logout" method="post" id="logoutForm"></form>